{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Resources": {
    "RAMRole": {
      "Type": "ALIYUN::RAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Replace": [
            {
              "<random-suffix>": {
                "Ref": "ALIYUN::StackName"
              }
            },
            "Stateful-Invocation-<random-suffix>"
          ]
        },
        "Description": "RAM role for sub flow demo",
        "AssumeRolePolicyDocument": {
          "Version": 1,
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "fc.aliyuncs.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Replace": [
                {
                  "<random-suffix>": {
                    "Ref": "ALIYUN::StackName"
                  }
                },
                "Stateful-Invocation-<random-suffix>"
              ]
            },
            "PolicyDocument": {
              "Version": 1,
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "fc:InvokeFunction",
                    "mns:PublishMessage",
                    "mns:SendMessage",
                    "log:*"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "Service": {
      "DependsOn": [
        "RAMRole"
      ],
      "Type": "ALIYUN::FC::Service",
      "Properties": {
        "ServiceName": {
          "Fn::Replace": [
            {
              "<random-suffix>": {
                "Ref": "ALIYUN::StackName"
              }
            },
            "Stateful-Invocation-<random-suffix>"
          ]
        },
        "Role": {
          "Fn::Replace": [
            {
              "<main-account-id>": {
                "Ref": "ALIYUN::TenantId"
              },
              "<random-suffix>": {
                "Ref": "ALIYUN::StackName"
              }
            },
            "acs:ram::<main-account-id>:role/Stateful-Invocation-<random-suffix>"
          ]
        },
        "InternetAccess": true
      }
    },
    "Function": {
      "Type": "ALIYUN::FC::Function",
      "DependsOn": [
        "Service"
      ],
      "Properties": {
        "ServiceName": {
          "Fn::Replace": [
            {
              "<random-suffix>": {
                "Ref": "ALIYUN::StackName"
              }
            },
            "Stateful-Invocation-<random-suffix>"
          ]
        },
        "Code": {
          "SourceCode": {
            "Fn::Replace": [
              {
                "<region>": {
                  "Ref": "ALIYUN::Region"
                }
              },
              "# -*- coding: utf-8 -*-\nimport json\nimport time\nimport logging\n\ndef handler(event, context):\n    class MyError(Exception):\n        pass\n    logging.info(\"long running function started\")\n    for num in range(0,30):\n        logging.info(\"long running function running\")\n        time.sleep(10)\n    if \"failure\" in evt :\n        # Raise a custom exception.\n        raise MyError('My unhandled exception')\n    evt = json.loads(event)\n    return event"
            ]
          }
        },
        "FunctionName": "main",
        "Handler": "index.handler",
        "Runtime": "python3",
        "MemorySize": 128,
        "Timeout": 120,
        "AsyncConfiguration": {
          "Destination": {
            "OnSuccess": "acs:mns:::/queues/{please_replace_me}/messages",
            "OnFailure": "acs:mns:::/queues/{please_replace_me}/messages"
          },
          "MaxAsyncEventAgeInSeconds": 172800,
          "MaxAsyncRetryAttempts": 1,
          "StatefulInvocation": true
        }
      }
    }
  }
}